<header>
	<h3>New Comments</h3>
</header>

<%= simple_form_for [stub, comment] do |f| %>
	<%= f.input :text %>
	<% if policy(stub).change_state? %>
		<%= f.association :state %>
	<% end %>

	<% if policy(stub).tag? %>
		<%= render "tags/form", f: f %>
	<% end %>
	<%= f.submit class: "btn btn-primary" %>
<% end %>